<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/image_message_profile_this"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/man"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/messengerTextView_this"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile_this"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/messageTextView_this"
        android:background="@drawable/rounded_rectangle_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/messengerTextView_this"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile_this"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/text_message_time_this"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/messageTextView_this"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/messageTextView_this"
        android:layout_marginStart="4dp" />

    <ImageView
        android:id="@+id/image_message_profile_that"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/admin_man"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/messengerTextView_that"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        app:layout_constraintRight_toLeftOf="@+id/image_message_profile_that"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="4dp" />

    <TextView
        android:id="@+id/messageTextView_that"
        android:background="@drawable/rounded_rectangle_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/messengerTextView_that"
        app:layout_constraintRight_toLeftOf="@+id/image_message_profile_that"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/text_message_time_that"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/messageTextView_that"
        app:layout_constraintLeft_toRightOf="@+id/messageTextView_that"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp" />

</android.support.constraint.ConstraintLayout>