<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/incidentTypeLogo"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/flame"
                    android:layout_weight="0.16"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/reportTitleTextView"
                            style="@style/reportList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:text="Report title"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/alertSign"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/green_alert"
                            android:visibility="visible"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/reportDateTextView"
                        style="@style/reportList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="4dp"
                        android:paddingTop="2dp"
                        android:text="Mon, 11/9"
                        android:textColor="#777b82"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                <TextView
                    android:id="@+id/reportLocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="0.1 mi"
                    android:textAlignment="center"
                    android:textColor="#2F4F4F"
                    android:textSize="13dp"
                    android:layout_weight="0.13"
                    android:paddingLeft="2dp"/>
                    <TextView
                      android:id="@+id/reportCountryTextView"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="4dp"
                      android:text="India"
                      android:textAlignment="center"
                      android:textColor="#2F4F4F"
                      android:textSize="13dp"
                      android:layout_weight="0.13"
                      android:paddingLeft="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reportInformationTextView"
                android:textColor="#31343a"
                android:textSize="16dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="8dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua..."/>

            <View
                android:layout_marginTop="4dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#c0c0c0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reportSourceTextView"
                android:textColor="#777b82"
                android:textSize="16dp"
                android:paddingLeft="8dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

</LinearLayout>
